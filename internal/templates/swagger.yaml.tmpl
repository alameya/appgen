openapi: 3.0.0
info:
  title: Generated API
  version: 1.0.0
  description: Auto-generated API documentation

servers:
  - url: http://localhost:8080
    description: Local server

paths:
  {{range .}}
  /{{toLower .Name}}:
    post:
      summary: Create {{.Name}}
      tags:
        - {{.Name}}
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/{{.Name}}'
      responses:
        '200':
          description: Successful operation
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/{{.Name}}'
    get:
      summary: List {{.Name}}s
      tags:
        - {{.Name}}
      responses:
        '200':
          description: Successful operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/{{.Name}}'

  /{{toLower .Name}}/{id}:
    get:
      summary: Get {{.Name}} by ID
      tags:
        - {{.Name}}
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
            format: int64
      responses:
        '200':
          description: Successful operation
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/{{.Name}}'
    put:
      summary: Update {{.Name}}
      tags:
        - {{.Name}}
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
            format: int64
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/{{.Name}}'
      responses:
        '200':
          description: Successful operation
    delete:
      summary: Delete {{.Name}}
      tags:
        - {{.Name}}
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
            format: int64
      responses:
        '200':
          description: Successful operation
  {{end}}

components:
  schemas:
    {{range .}}
    {{.Name}}:
      type: object
      properties:
        {{range .Fields}}
        {{toLower .JsonName}}:
          type: {{if eq .Type "int64"}}integer
          format: int64{{else if eq .Type "time.Time"}}string
          format: date-time{{else}}{{.Type}}{{end}}
        {{end}}
        created_at:
          type: string
          format: date-time
        updated_at:
          type: string
          format: date-time
      required:
        - {{range .Fields}}{{if ne .Name "Id"}}{{toLower .JsonName}}
        - {{end}}{{end}}created_at
        - updated_at
    {{end}} 